<!-- Edit Provider Section -->
<section class="page-section" id="edit-provider">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <h2 class="mt-0">Edit a Provider</h2>
        <hr class="divider my-4">
      </div>
    </div>
    <div class="row justify-content-center">
      <!-- Nested Row within Card Body -->
      <div class="row o-hidden border-0">
        <div class="col-lg-12">
          <form class="user" action="/providers/update/{{id}}" method="post">   <!-- Used post method for security purpose-->
            <div class="form-group row">
              <div class="col-sm-6 mb-3 mb-sm-0">
                <label for="inputFirstName">First Name</label>
                <input type="text" class="form-control form-control-user" name="firstname" 
                value="{{provider.firstname}}" id="inputFirstName"  required>
              </div>
              <div class="col-sm-6">
                <label for="inputLastName">Last Name</label>
                <input type="text" class="form-control form-control-user" name="lastname"
                 value="{{provider.lastname}}" id="inputLastName"
                    required>
              </div>
            </div>
            <div class="form-group">
              <label for="inputPosition">Position</label>
              <input type="text" class="form-control form-control-user" name="position" 
               value="{{provider.position}}" id="inputPosition" required>
            </div>
            <div class="form-group row">
              <div class="col-sm-6 mb-3 mb-sm-0">
                <label for="inputEmail">Email</label>
                <input type="email" class="form-control form-control-user" name="email"
                 value="{{provider.company.email}}" id="inputEmail" required>
              </div>
              <div class="col-sm-6 mb-3 mb-sm-0">
                <label for="inputPhone">Phone</label>
                <input type="phone" class="form-control form-control-user" name="phone"
                 value="{{provider.company.phone}}" id="inputPhone" required>
              </div>
            </div>
            <hr class="divider my-4">
            <div class="form-group">
              <label for="inputCompanyName">Company</label>
              <input type="text" class="form-control form-control-user" name="company_name"
               value="{{provider.company.company_name}}" id="inputCompanyName" required>
            </div>
            <div class="form-group">
              <label for="inputAddress">Address</label>
              <input type="text" class="form-control" name="address"
                value="{{provider.company.address}}" id="inputAddress" required>
            </div>
            <div class="form-group">
              <label for="inputAddress2">Address 2</label>
              <input type="text" class="form-control" name="address2" 
               value="{{provider.company.address2}}" id="inputAddress2">
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="inputCity">City</label>
                <input type="text" class="form-control" name="city" 
                 value="{{provider.company.city}}" id="inputCity"  required>
              </div>
              <div class="form-group col-md-4">
                <label for="inputState">State</label>
                <input type="text" class="form-control" name="state"
                 value="{{provider.company.state}}" id="inputState" maxlength="2" required>
              </div>
              <div class="form-group col-md-2">
                <label for="inputZipCode">Zip Code</label>
                <input type="text" class="form-control" name="postal_code"
                 value="{{provider.company.postal_code}}" id="inputZipCode" maxlength="5" required>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-6 mb-3 mb-sm-0">
                <label for="inputDescription">Description</label>
                <textarea class="form-control form-control-user" name="description"
                 value="{{provider.company.description}}" id="inputDescription" required></textarea>
              </div>
              <div class="col-sm-6">
                <label for="inputTagLine">Tag Line</label>
                <textarea class="form-control form-control-user" name="tagline"
                 value="{{provider.company.tagline}}" id="inputTagLine" required></textarea>
              </div>
            </div>
            <button class="btn btn-primary btn-block" type="submit">Update Provider</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
