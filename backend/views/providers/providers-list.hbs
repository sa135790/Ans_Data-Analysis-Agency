<!-- Provider List Section -->
<section class="page-section" id="provider-list">
  <div class="container">
    <h2 class="text-center mt-0">At Your Service</h2>
    <hr class="divider my-4">
    <div class="table-responsive">
      <a class="btn btn-primary my-2" href="/providers/add-provider/">Add New Provider</a>
      <table class="table table-hover table-bordered">
        <thead class="thead-light">
          <tr>
            <th scope="col">Id</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Position</th>
            <th scope="col">Company</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each providers}}
          <tr>
            <th scope="row">{{id}}</th>
            <td>{{firstname}}</td>
            <td>{{lastname}}</td>
            <td>{{position}}</td>
            <td>{{company.company_name}}</td>
            <td>

              <a href="/providers/details/{{id}}" class="btn btn-info btn-sm">More info...</a>
              <a href="/providers/edit/{{id}}" class="btn btn-secondary btn-sm">Edit</a>
              <a href="#my{{id}}" class="btn btn-danger btn-sm" data-toggle="modal">Delete</a>

              </td>
              </tr>
               {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>
